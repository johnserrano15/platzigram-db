{
  "name": "platzigramdb",
  "version": "1.0.0",
  "description": "Platzigram Database Client",
  "main": "index.js",
  "scripts": {
    "lint": "standard"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "jquery": true
    },
    "parser": "babel-eslint",
    "rules": {
      "no-console": "warn",
      "no-use-before-define": "warn",
      "spaced-comment": "warn"
    },
    "extends": "standard"
  },
  "eslintIgnore": [
    "/node_modules/*",
    "build/*",
    "!build/index.js",
    "bundle.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnserrano15/platzigram-db.git"
